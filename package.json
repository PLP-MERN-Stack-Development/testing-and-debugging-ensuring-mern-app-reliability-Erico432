{
  "name": "mern-testing",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
    "install-all": "npm i && npm i --prefix client && npm i --prefix server",
    "dev": "concurrently \"npm run dev --prefix server\" \"npm run start --prefix client\"",
    "test": "jest --passWithNoTests",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "test:e2e": "npm run --prefix client cypress run",
    "test:coverage": "jest --coverage && jest-coverage-badges --input coverage/coverage-summary.json --output coverage/badges"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2"
  }
}
